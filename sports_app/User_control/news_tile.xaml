<UserControl x:Class="sports_app.User_control.news_tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sports_app.User_control"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="500"
             MouseEnter="UserControl_MouseEnter"
             MouseLeave="UserControl_MouseLeave"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="270"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Border CornerRadius="20,20,0,0">
            <Border.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="{Binding Source_image_PH}"
                       x:Name="Source_image"/>
            </Border.Background>
        </Border>

        <Border Grid.Row="1" CornerRadius="0,0,20,20" Background="#161516">
            <TextBlock Margin="10" Text="{Binding Article_title_PH}" FontSize="35"
                       FontFamily="Montserrat Semibold" 
                       TextWrapping="WrapWithOverflow"
                       Name="Article_title"
                       Foreground="White"/>
        </Border>

        <Grid.Effect>
            <DropShadowEffect ShadowDepth="4" Direction="270" Opacity="0.7" Color="Black"/>
        </Grid.Effect>
    </Grid>
</UserControl>
