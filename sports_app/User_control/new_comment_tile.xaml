<UserControl x:Class="sports_app.User_control.new_comment_tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sports_app.User_control"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             HorizontalAlignment="Left">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="1" CornerRadius="30,30,30,30" Background="#161516"
                Name="CommentBorder">
            <TextBlock Margin="10" Text="{Binding Comment_PH}" FontSize="30"
                       FontFamily="Montserrat Semibold" 
                       TextWrapping="WrapWithOverflow"
                       Name="CommentBox"
                       Foreground="White"/>
        </Border>
        <Ellipse Height="40" Width="40" Grid.Column="1" Margin="10" Name="ProfilePicture" VerticalAlignment="Top">
            <Ellipse.Fill>
                <ImageBrush ImageSource="pack://application:,,,/Image_resources/profile_icon.png"/>
            </Ellipse.Fill>
        </Ellipse>
        
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="3" Direction="270" Opacity="0.4" Color="Black"/>
        </Grid.Effect>
    </Grid>
</UserControl>
